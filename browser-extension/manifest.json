{
    "manifest_version": 3,
    "name": "Libry Collector",
    "version": "1.0.0",
    "description": "Save links to your Libry collections with one click",
    "permissions": ["activeTab", "storage"],
    "host_permissions": [
      "http://localhost:3000/*",
      "https://*.vercel.app/*",
      "https://*.netlify.app/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "Save to Libry"
    },
    "background": {
      "service_worker": "background.js"
    }
  }